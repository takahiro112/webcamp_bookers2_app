  <table class='table'>
   <% @book.book_comments.each do |book_comment| %>
   <tr>
    <td>
      <%= attachment_image_tag book_comment.user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'20x20',format: 'no_image.jpg' %>
      <%= book_comment.user.name %>
    </td>
    <td><%= book_comment.comment %></td>
    <td>
      <% if book_comment.user == current_user %>
      <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete,remote: true %>
      <% end %>
    </td>
   </tr>
   <% end %>
  </table>