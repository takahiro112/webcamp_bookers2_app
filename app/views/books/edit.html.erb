<h1>Editing Book</h1>

<p id="notice">
  <%= notice %>
</p>

<% if @book.errors.any? %>
    <p>error</p>
    <ul>
        <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>

 <%= form_with model:@book, local:true do |f| %>
  <h2>Title</h2>
  <%= f.text_field :title %>
  <h2>Body</h2>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
 <% end %>

 <%= link_to "Show",book_path(@book.id)%>
 <%= link_to "Back",books_path %>



