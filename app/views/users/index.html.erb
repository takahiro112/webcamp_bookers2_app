<div class="container">
  <div class="row">
 <div class="col-md-3">

<p id="notice">
  <%= notice %>
</p>

<% if @book.errors.any? %>
    <p>error!!</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>


 <h2>User info</h2>
   <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" ,format: 'no_image.jpg' %>
   <h5>name</h5>
   <%= @user.name %>
   <h5>introduction</h5>
   <%= @user.introduction %>
   <i class="fas fa-user-cog"></i>
   <%= link_to "editing info",edit_user_path(@user.id) %>




   <h2>New book</h2>
   <%= form_with model:@book, local:true do |f| %>
   <h3>Title</h3>
   <%= f.text_field :title %>
   <h3>Body</h3>
   <%= f.text_area :body %>
   <%= f.submit "Create Book" %>
   <% end %>
  </div>



<div class="col-md-8 offset-md-1">
<h2>Users</h2>

<table class="table">
  <% @users.each do |user| %>
  <tr>
    <th><%= attachment_image_tag user, :profile_image, :fill, 20, 20, format: 'jpeg', fallback: "no_image.jpg" %></th>
    <th><%= user.name %></th>
    <th><%= link_to "Show", user_path(user.id) %></th>
  </tr>
  <% end %>
</table>
</div>
</div>
</div>